<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.1cCAClient" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/TextView.SFProDisplayFont.Regular</item>
        <item name="materialButtonStyle">@style/Button.SFProDisplayFont.Medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="textInputStyle">@style/GlobalTextInputStyle</item>
    </style>

    <style name="TextView.SFProDisplayFont.Regular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextView.SFProDisplayFont.Regular.Translucent" parent="TextView.SFProDisplayFont.Regular">
        <item name="android:textColor">@color/black_translucent</item>
    </style>

    <style name="TextView.SFProDisplayFont.Medium" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="EditText.SFProDisplayFont.Medium" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="Button.SFProDisplayFont.Medium" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/small</item>
    </style>

    <style name="Button.Antagonist" parent="Button.SFProDisplayFont.Medium">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeAppearance.Image.PILL" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.Image.RoundCorner.Large" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/round_corner_large</item>
    </style>

    <style name="ShapeAppearance.Image.RoundCorner.Small" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/round_corner_small</item>
    </style>



    <style name="GlobalTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="AccountHintTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginTop">@dimen/large</item>
    </style>


    <style name="AccountValueTextView" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginStart">@dimen/large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>


</resources>